<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

<style>
    body,html{
background: #7F7FD5;
background: -webkit-linear-gradient(to right, #91EAE4, #86A8E7, #7F7FD5);
background: linear-gradient(to right, #91EAE4, #86A8E7, #7F7FD5);
height: 100%;
}

.card{
    background-color: rgba(0,0,0,0.4) !important;
}

.white{
    color :white;
}

a.white{
    color: #7F7FD5;
}

</style>


</head>

    <body class="d-flex">
        <div class="container mt-4 card my-auto">
            <h5 class="card-header info-color white-text text-center py-4">
              <strong class="white">Sign in</strong>
            </h5>
          
            <!--Card content-->
            <div class="card-body mt-3 px-lg-5 pt-0">
              <% if (messages.error) { %>
                <%= messages.error %>
              <% } %>
              <!-- Form -->
              <form style="color: #757575;" action="" method="POST">
          
                <!-- Email -->
                <div class="mb-3 form-group">
                    <label class="white" for="materialLoginFormEmail">E-mail</label>
                  <input type="email" id="materialLoginFormEmail" name="email" class="form-control">
                </div>
          
                <!-- Password -->
                <div class="md-form">
                    <label class="white" for="materialLoginFormPassword">Password</label>
                  <input type="password" id="materialLoginFormPassword" name="password" class="form-control">
                </div>
          
                <div class="mt-3 d-flex justify-content-around">
                  <div>
                    <!-- Remember me -->
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" id="materialLoginFormRemember">
                      <label class="white" class="form-check-label" for="materialLoginFormRemember">Remember me</label>
                    </div>
                  </div>
                  <div>
                    <!-- Forgot password -->
                    <a class="white" href="">Forgot password?</a>
                  </div>
                </div>
          
                <!-- Sign in button -->
                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign in</button>
          
                <div class="text-center">
                    <p class="white">Not a member?
                        <a class="white" href="">Register</a>
                      </p>
                </div>
                <!-- Register -->
                
          
              </form>
              <!-- Form -->
          
            </div>
          
          </div>
    </body>
    
</html>